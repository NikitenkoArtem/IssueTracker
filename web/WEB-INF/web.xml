    </servlet>
    <servlet-mapping>
        <servlet-name>Status</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Type</servlet-name>
        <servlet-class>by.epam.controller.TypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Type</servlet-name>
        <url-pattern>/type</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>by.epam.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
